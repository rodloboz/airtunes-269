<div class="artist-header">
  <div class="avatar-xxl">
    <%= image_tag @artist.image_url, class: "avatar-xxl" %>
  </div>
  <div class="artist-menu">
    <h1><%= @artist.name %></h1>
    <%= link_to "Artists", root_path  %> |
    <%= link_to "Add Album", new_artist_album_path(@artist) %> |
    <%= link_to "Add Tags", new_artist_tag_path(@artist) %>
    <div class="artist-tags">
      <%= render @artist.tags %>
    </div>
  </div>
</div>


<div id="albums">
  <h2>Releases</h2>
  <% if @artist.albums.any? %>
    <div class="container-fluid">
      <div class="row">
        <% @artist.albums.each do |album| %>
          <%= render album %>
        <% end %>
      </div>
    </div>
  <% else %>
    <p>This artist has no releases yet!</p>
  <% end %>
</div>
