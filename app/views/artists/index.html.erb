<h1>Artists</h1>

<div class="container">
  <div class="row">
    <% @artists.each do |artist| %>
      <div class="col-sm-12 col-md-4">
        <%= link_to artist_path(artist) do %>
          <div class="artist">
            <img class="avatar-large avatar-bordered" src="<%= artist.image_url %>">
            <div class="artist-name">
              <%= artist.name %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
